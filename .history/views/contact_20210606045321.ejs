<!DOCTYPE html>
<html lang="en">
<%- include('./partials/Header') %>
<body>
    <%- include('./partials/Navbar') %>
    <div class="container py-3 contact">
        <div class="p-5 p-xs-1 p-sm-1 p-md-1 py-2 px-0 mt-5 contactDiv">
            <form class="px-0">
              <h3>Contact Me</h3>
                <div class="my-3">
                  <input class="px-3 py-2 name w-100" type="text" name="name" id="name" placeholder="Enter your name" required>
                </div>
                <div class="my-3">
                  <input class="px-3 py-2 email w-100" type="email" name="email" id="email" placeholder="Enter your email" required>
                </div>
                <div class="my-3">
                  <textarea class="px-3 py-2 w-100" name="message" id="" cols="30" rows="7" placeholder="Leave a message" required></textarea>
                </div>
                <div class="my-3">
                  <input class="px-3 py-1 submitBtn btn btn-info" type="submit" value="Send Message">
                </div>
            </form>
          </div>
    </div>
    <%- include('./partials/Footer') %>
</body>
</html>