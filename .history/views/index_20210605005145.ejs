<!DOCTYPE html>
<html lang="en">
<%- include('./partials/Header') %>
<body>
    <%- include('./partials/Navbar') %>
      <div class="container py-5">
        <div class="mx-auto bg-light w-50 p-5">
          <form action="/books" method="POST">
            <h4>Add Book</h4>
              <div class="my-2">
                <input class="px-3 py-1 title w-100" type="text" name="title" id="title" placeholder="Enter book title">
              </div>
              <div class="my-2">
                <input class="px-3 py-1 author w-100" type="text" name="author" id="author" placeholder="Enter author">
              </div>
              <div class="my-2">
                <input class="px-3 py-1 isRead w-100" type="checkbox" name="isRead" id="isRead">
                Did you read?
              </div>
              <div class="my-2">
                <input class="px-3 py-1 submitBtn" type="submit" value="Add">
              </div>
          </form>
        </div>
      </div>
    <%- include('./partials/Footer') %>
</body>
</html>