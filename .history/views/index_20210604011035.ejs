<!DOCTYPE html>
<html lang="en">
<%- include('./partials/Header') %>
<body>
    <%- include('./partials/Navbar') %>
      <div class="container">
      <h3>Home Page</h3>
        <form action="/" method="POST">
          <h4>Add Book</h4>
          <div class="titleDiv my-2">
            <input class="px-3 py-1 title" type="text" name="title" id="title" placeholder="Enter book title">
          </div>
          <div class="authorDiv my-2">
            <input class="px-3 py-1 author" type="text" name="author" id="author" placeholder="Enter author">
          </div>
          <div class="readDiv my-2">
            <input class="px-3 py-1 isRead" type="checkbox" name="isRead" id="isRead">
            Did you read?
          </div>
          <div class="buttonDiv my-2">
            <button class="px-3 py-1 addBookBtn">Add Book</button>
          </div>
        </form>
      </div>
    <%- include('./partials/Footer') %>
</body>
</html>